<%- include('partials/head') %>
<%- include('partials/nav') %>

<main>
    <h2>Modificar producto</h2>
    <form id="form-modificar" enctype="multipart/form-data">
        <label>ID (solo lectura)</label>
        <input type="number" name="id" placeholder="ID" required readonly style="background-color: #e9ecef;">

        <label>Nombre</label>
        <input type="text" name="name" placeholder="Nombre" required>

        <label>Tipo</label>
        <input type="text" name="type" placeholder="Tipo" required>

        <label>Precio</label>
        <input type="number" name="price" placeholder="Precio" required>

        <div id="preview-container" style="margin: 10px 0; display: none;">
            <p style="margin:0; font-size: 0.85rem;">Imagen actual:</p>
            <img id="current-img" src="" alt="Actual" style="max-height: 100px; border: 1px solid #ddd; padding: 2px;">
        </div>

        <input type="hidden" name="existingImage">

        <label>Nueva imagen (opcional):</label>
        <input type="file" name="image" accept="image/*">

        <label>Activo</label>
        <select name="active" required>
            <option value="1">SÃ­</option>
            <option value="0">No</option>
        </select>

        <button type="submit" style="margin-top: 10px;">Actualizar</button>
    </form>
    <pre id="resultado-modificar"></pre>
</main>

<script src="/js/update.js"></script>

<%- include('partials/footer') %>
